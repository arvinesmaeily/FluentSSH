<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="FluentSSH.Dialogs.ConfigurationDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentSSH.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="ThisDialog"
    Title="Add configuration"
    PrimaryButtonText="Save"
    CloseButtonText="Cancel"
    DefaultButton="Primary"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick">

    <ContentDialog.CloseButtonStyle>
        <Style TargetType="Button">
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
    </ContentDialog.CloseButtonStyle>

    <StackPanel Spacing="16" MinWidth="400">
        
        <!-- Error InfoBar -->
        <InfoBar x:Name="ErrorInfoBar"
                 IsOpen="False"
                 IsClosable="False"
                 Severity="Error"
                 Title="Validation Error"/>

        <!-- Name -->
        <TextBox x:Name="NameTextBox"
                 Header="Configuration name"
                 PlaceholderText="My SSH Server"
                 TextChanged="Field_TextChanged"/>

        <!-- Server Address -->
        <TextBox x:Name="ServerAddressTextBox"
                 Header="Server address"
                 PlaceholderText="192.168.1.1 or ssh.example.com"
                 TextChanged="Field_TextChanged"/>

        <!-- Server Port -->
        <NumberBox x:Name="ServerPortNumberBox"
                   Header="Server port"
                   Value="22"
                   Minimum="1"
                   Maximum="65535"
                   SpinButtonPlacementMode="Inline"
                   SmallChange="1"
                   ValueChanged="Field_ValueChanged"/>

        <!-- Username -->
        <TextBox x:Name="UsernameTextBox"
                 Header="Username"
                 PlaceholderText="root"
                 TextChanged="Field_TextChanged"/>

        <!-- Password -->
        <PasswordBox x:Name="PasswordInput"
                     Header="Password"
                     PlaceholderText="Enter password"
                     PasswordRevealMode="Peek"
                     PasswordChanged="Field_PasswordChanged"/>

    </StackPanel>
</ContentDialog>
